<?xml version='1.0' encoding='utf-8'?>
<widget id="se.dbwebb.weather" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>What's around?</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <icon density="hdpi" src="www/res/mipmap-hdpi/globe_icon.png" />
        <icon density="mdpi" src="www/res/mipmap-mdpi/globe_icon.png" />
        <icon density="xhdpi" src="www/res/mipmap-xhdpi/globe_icon.png" />

        <splash density="port-hdpi" src="www/res/drawable-hdpi/screen.png" />
        <splash density="port-mdpi" src="www/res/drawable-mdpi/screen.png" />
        <splash density="port-xhdpi" src="www/res/drawable-xhdpi/screen.png" />

        <splash density="land-hdpi" src="www/res/drawable-land-hdpi/screen.png" />
        <splash density="land-mdpi" src="www/res/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="www/res/drawable-land-xhdpi/screen.png" />

    </platform>
    <platform name="browser">
        <preference name="ShowSplashScreen" value="false"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.2" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
</widget>
